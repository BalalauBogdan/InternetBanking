<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.internetbankingfrontend.controller.customer.ShowCustomerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Introdu ID Customer"/>
    <TextField fx:id="CustomerIDField" promptText="Customer ID "/>
    <Button text="Find Customer" onAction="#findCustomer"/>
    <HBox styleClass="Hboxfindcustomer">
        <Label  styleClass="findcustomerlabel" fx:id="usernameLabel" text="Username: " visible="false"/>
        <TextField styleClass="findcustomerfield" fx:id="usernameField" visible="false" editable="false" />
    </HBox>
    <HBox styleClass="Hboxfindcustomer">
        <Label styleClass="findcustomerlabel" fx:id="passwordLabel" text="Password: " visible="false"/>
        <TextField  styleClass="findcustomerfield" fx:id="passwordField" visible="false" editable="false" />
    </HBox>
    <HBox styleClass="Hboxfindcustomer">
        <Label styleClass="findcustomerlabel" fx:id="firstnameLabel" text="Firstname: " visible="false"/>
        <TextField styleClass="findcustomerfield" fx:id="firstnameField" visible="false" editable="false" />
    </HBox>
    <HBox styleClass="Hboxfindcustomer">
        <Label styleClass="findcustomerlabel" fx:id="lastnameLabel" text="Lastname: " visible="false"/>
        <TextField styleClass="findcustomerfield" fx:id="lastnameField" visible="false" editable="false" />
    </HBox>
    <HBox styleClass="Hboxfindcustomer">
        <Label styleClass="findcustomerlabel" fx:id="IbanLabel" text="IBAN: " visible="false"/>
        <TextField styleClass="findcustomerfield" fx:id="IbanField" visible="false" editable="false"/>
    </HBox>
    <HBox styleClass="Hboxfindcustomer">
        <Label styleClass="findcustomerlabel" fx:id="phonenumberLabel" text="Phone Number: " visible="false"/>
        <TextField styleClass="findcustomerfield" fx:id="phonenumberField" visible="false" editable="false" />
    </HBox>
</VBox>
